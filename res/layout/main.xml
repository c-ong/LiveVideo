<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  	<LinearLayout android:layout_width="fill_parent"
  		android:layout_height="0dip"
  		android:layout_weight="1.0"
  		android:orientation="horizontal"
  		android:background="@null">
  		<RelativeLayout android:layout_width="0dip"
  			android:layout_height="fill_parent"
  			android:layout_weight="1.0">
  			<SurfaceView android:id="@+id/remote_video"
	    		android:layout_height="144dip"
	    		android:layout_width="176dip"
	    		android:layout_centerInParent="true"
	    		android:visibility="gone"/>	
  		</RelativeLayout>
  		
  		<RelativeLayout android:layout_width="0dip"
  			android:layout_height="fill_parent"
  			android:layout_weight="1.0">
  			<SurfaceView android:id="@+id/local_video"
	    		android:layout_height="144dip"
	    		android:layout_width="176dip"
	    		android:layout_centerInParent="true"
	    		android:visibility="gone"/>
  		</RelativeLayout>
  	</LinearLayout>
    
    <EditText android:id="@+id/peer_ip"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Please enter the ip address of peer"/>
    	
    <LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<ToggleButton android:id="@+id/send_video"
    		android:textOn="Send On"
    		android:textOff="Send Off"
    		android:layout_width="0dip"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"/>
    	<ToggleButton android:id="@+id/play_video" 
    		android:textOn="Play On"
    		android:textOff="Play Off" 
    		android:layout_width="0dip"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
